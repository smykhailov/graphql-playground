{
  "name": "graphql-playground",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "yarn generate:gql && react-scripts start",
    "build": "yarn generate:gql && react-scripts build",
    "test": "yarn generate:gql && react-scripts test",
    "eject": "react-scripts eject",
    "format": "prettier --check ./src/**/*.{ts,tsx}",
    "format:fix": "prettier ./src/** --write",
    "lint": "eslint ./src/**/*.{ts,tsx} --max-warnings=0",
    "lint:fix": "eslint ./src/**/*.{ts,tsx} --fix --max-warnings=0",
    "generate:gql": "graphql-codegen --config codegen.yml"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:css-modules/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "react",
      "css-modules",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.2.9",
    "faker": "^5.1.0",
    "graphql": "^15.4.0-experimental-stream-defer.1",
    "graphql-tools": "^7.0.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.19.2",
    "@graphql-codegen/typescript": "1.17.11",
    "@graphql-codegen/typescript-document-nodes": "^1.17.8",
    "@graphql-codegen/typescript-operations": "1.17.10",
    "@graphql-codegen/typescript-react-apollo": "2.1.1",
    "@graphql-codegen/typescript-resolvers": "^1.17.11",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.1.3",
    "@types/faker": "^5.1.4",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.14.10",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-css-modules": "^2.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.1.1",
    "react-scripts": "4.0.1",
    "typescript": "^4.1.2"
  }
}
